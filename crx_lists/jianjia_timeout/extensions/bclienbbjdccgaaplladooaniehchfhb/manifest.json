{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,

  "name": "MySocialTab",
  "description": "This extension allows user to use mysocialtab buttons on any page",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": ["includes/*"],

  "background": {
    "page": "popup.html"
  },
  
  "content_scripts": [ {  
	"matches": [ "http://*/*", "https://*/*"],
    "js": [ "jquery-3.3.1.js" ],
	"run_at": "document_end" 
  }],
  
  "permissions": [
    "activeTab",
    "storage",
	"clipboardWrite",
    "clipboardRead"

  ]
}
